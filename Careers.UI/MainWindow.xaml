<Window x:Class="Careers.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Careers.UI"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="25" Text="Добро пожаловать в Career Manager!" HorizontalAlignment="Center" FontSize="20" FontWeight="ExtraBlack"/>
        <StackPanel MaxWidth="100" MinWidth="50" MaxHeight="100" MinHeight="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonLogin" Content="Войти"/>
            <Button x:Name="buttonRegist" Margin="0 10 0 0" Content="Регистрация"/>
        </StackPanel>
    </Grid>
</Window>
